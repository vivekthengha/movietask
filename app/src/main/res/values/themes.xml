<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieAppTask" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorWhite</item>
    </style>

    <style name="SplashScreenTheme" parent = "Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.Light" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextStyleSmall">
        <item name="android:textSize">@dimen/textSizeNormal</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/marko_one_regular</item>
        <item name="android:layout_marginStart">@dimen/marginMedium</item>
        <item name="android:layout_marginEnd">@dimen/marginMedium</item>
    </style>

    <style name="TextStyleTitle">
        <item name="android:textSize">@dimen/textSizeTitle</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/marko_one_regular</item>
        <item name="android:layout_marginStart">@dimen/marginMedium</item>
        <item name="android:layout_marginEnd">@dimen/marginMedium</item>
        <item name="android:layout_marginTop">@dimen/marginMedium</item>
    </style>

</resources>