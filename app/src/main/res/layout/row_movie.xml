<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivMoviePoster"
        android:layout_width="@dimen/movieItemWidth"
        android:layout_height="@dimen/moviesItemHeight"
        android:scaleType="centerCrop"
        android:layout_marginTop="@dimen/marginSmallest"
        android:layout_marginBottom="@dimen/marginSmallest"
        android:layout_marginStart="@dimen/marginSmallest"
        android:layout_marginEnd="@dimen/marginSmallest"
        android:background="@color/colorDarkGrey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>